<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="18dp">

    <HorizontalScrollView
        android:id="@+id/hsv_gandengyan_fmt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_namelist_gandengyan_fmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_scorelist_gandengyan_fmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ecf1f5"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp">

        <TextView
            style="@style/tv_gandengyan_recycler_header"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="选手名称" />

        <TextView
            style="@style/tv_gandengyan_recycler_header"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="剩余" />

        <TextView
            style="@style/tv_gandengyan_recycler_header"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="得分" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_gandengyan_fmt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="炸弹"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_minus_gandengyan_fmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_indeterminate_check_box_green_a700_48dp" />

        <TextView
            android:id="@+id/tv_boom_gandengyan_fmt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_right_angle_normal"
            android:gravity="center"
            android:padding="3dp"
            android:text="无"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/iv_add_gandengyan_fmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_box_pink_a200_48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倍"
            android:textSize="22sp" />

        <Button
            android:id="@+id/b_save_gandengyan_fmt"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button"
            android:text="保存开始下一局"
            android:textColor="@color/button_text_color" />
    </LinearLayout>


</LinearLayout>